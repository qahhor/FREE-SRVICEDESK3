# Service Desk Platform - Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
POSTGRES_DB=servicedesk
POSTGRES_USER=servicedesk
POSTGRES_PASSWORD=changeme_secure_password_here

# Redis Configuration
REDIS_PASSWORD=changeme_redis_password_here

# RabbitMQ Configuration
RABBITMQ_USER=servicedesk
RABBITMQ_PASSWORD=changeme_rabbitmq_password_here

# JWT Configuration
JWT_SECRET=changeme_your_256_bit_secret_key_for_jwt_tokens_minimum_32_characters
JWT_EXPIRATION=86400000

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Server Configuration
SERVER_PORT=8080

# Swagger (disable in production)
SWAGGER_ENABLED=false

# Database Pool Configuration
DB_POOL_SIZE=20
DB_POOL_MIN_IDLE=5
